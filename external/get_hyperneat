#!/bin/bash

# NOTE: This script is hacky and was tested with Ubuntu 12.04. Also, the libraries required
# might not be the entire set.
# YMMV.

echo "Installing required packages..."
#sudo apt-get install build-essential libwxgtk2.8-dev python-dev cmake libboost-thread-dev libboost-system-dev libboost-filesystem-dev libboost-program-options-dev libboost-test-dev libboost-mpi-dev libboost-python

#####

# NOTE: This clones my repository which has some updates to use a newer Python version (2.7)
# and some other more recent libraries.

if [ ! -d "HyperNEAT" ]; then
    echo "HyperNEAT directory not found. Cloning HyperNEAT..."
    git clone git@github.com:anthonytw/HyperNEAT.git
    #git clone git://github.com/MisterTea/HyperNEAT.git
else
    echo "HyperNEAT directory found. Git respository will not be cloned."
fi
cd HyperNEAT

#####

echo "Building JGTL..."
cd JGTL
mkdir -p build/linux/release
cd build/linux/release
#cmake -D BOOST_ROOT=/usr/include/boost BOOST_STAGE=stage ../../../
#make
cd ../../../../

#####

echo "Building zlib..."
cd zlib
mkdir -p build/linux/release
cd build/linux/release
#cmake ../../../
#make
cd ../../../../

#####

echo "Building tinyxmldll..."
cd tinyxmldll
mkdir -p build/linux/release
cd build/linux/release
#cmake ../../../
#make
cd ../../../../

#####

echo "Building Board..."
cd Board
mkdir -p build/linux/release
cd build/linux/release
#cmake ../../../
#make
cd ../../../../

#####

echo "Building Fuego..."
cd fuego-0.4
mkdir -p build/linux/release
cd build/linux/release
#cmake -D BOOST_ROOT=/usr/include/boost ../../../
#make
cd ../../../../

#####

echo "Building HyperNEAT..."
cd NE/HyperNEAT
mkdir -p build/linux/release
cd build/linux/release
cmake -D BOARD_INCLUDE=../../../../../Board/include -D BOARD_LIB=../../../../../Board/out -D BOOST_ROOT=/usr/include/boost -D BUILD_GPU=OFF -D BUILD_MPI=OFF -D BUILD_PYTHON=ON -D FUEGO_INCLUDE=../../../../../fuego-0.4 -D FUEGO_LIB=../../../../../fuego-0.4/out -D JGTL_INCLUDE=../../../../../JGTL/include -D PYTHON_INCLUDE=/usr/include/python2.7 -D PYTHON_LIB=/usr/lib/python2.7 -D TINYXMLDLL_INCLUDE=../../../../../tinyxmldll/include -D TINYXMLDLL_LIB=../../../../../tinyxmldll/out -D USE_GUI=YES -D WXWIDGETS_BUILD_INCLUDE_DEBUG=/usr/lib/x86_64-linux-gnu/wx/include/gtk2-unicode-debug-2.8 -D WXWIDGETS_BUILD_INCLUDE_RELEASE=/usr/lib/x86_64-linux-gnu/wx/include/gtk2-unicode-release-2.8 -D WXWIDGETS_DEBUG_LIB=/usr/lib -D WXWIDGETS_INCLUDE=/usr/include/wx-2.8 -D WXWIDGETS_RELEASE_LIB=/usr/lib -D ZLIB_INCLUDE=../../../../../zlib -D ZLIB_LIB=../../../../../zlib/out -D NEAT_DEFORMS_PATH=../../../../../../../src/hyperneat ../../../
make
cd ../../../../

#####

echo "FINISHED."
